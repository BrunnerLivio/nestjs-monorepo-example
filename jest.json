{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "packages/",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [
    "lib"
  ],
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.spec.json"
    }
  }
}